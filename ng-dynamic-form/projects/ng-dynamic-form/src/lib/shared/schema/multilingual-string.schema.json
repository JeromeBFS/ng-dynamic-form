{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://bfs.admin.ch/schemas/multilingual-string.schema.json",
  "description": "Defines a multilingual string that allow to set string in de, fr, it or en",
  "definitions": {
    "MultilingualString": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "fr": {
          type: "string",
          minLength: 1
        },
        "de": {
          type: "string",
          minLength: 1
        },
        "it": {
          type: "string",
          minLength: 1
        },
        "en": {
          type: "string",
          minLength: 1
        }
      },
      "additionalProperties": false
    }
  }
}
